<div>
  <h2>Your Posts</h2>
  {{#each posts}}
  <div class="post">
    <h2>{{this.title}}</h2>
    <p>{{this.content}}</p>
    <a href="/post/{{this.id}}">Edit</a>
  </div>
  {{/each}}
</div>
<form class="new-post-form">
  <input type="text" id="post-title" placeholder="Title">
  <textarea id="post-content" placeholder="Content"></textarea>
  <button type="submit">Add Post</button>
</form>
